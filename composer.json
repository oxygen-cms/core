{
    "name": "oxygen/core",
    "description": "The Core Framework For Oxygen",
    "license": "MIT",
    "keywords": [
        "cms",
        "framework",
        "OxygenExtension"
    ],
    "authors": [
        {
            "name": "Chris Chamberlain",
            "email": "chris@chamberlain.id.au"
        }
    ],
    "require": {
        "php": ">=7.2.0",
        "oxygen/data": "~0.9.7",
        "laravel/framework": "~6.0",
        "twig/twig": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Oxygen\\Core\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "minimum-stability": "stable",
    "extra": {
        "title": "Oxygen Core",
        "readme": "oxygen.md",
        "changes": "changes.md",
        "icon": "icon.png",
        "providers": [
            {
                "name": "Core",
                "class": "Oxygen\\Core\\CoreServiceProvider",
                "description": "Core Service Provider of Oxygen"
            },
            {
                "name": "Console",
                "class": "Oxygen\\Core\\Console\\ConsoleServiceProvider",
                "description": "Adds Console Commands"
            },
            {
                "name": "Database",
                "class": "Oxygen\\Core\\Database\\DatabaseServiceProvider",
                "description": "Adds automatic migrations for the database"
            },
            {
                "name": "Translation",
                "class": "Oxygen\\Core\\Translation\\TranslationServiceProvider",
                "description": "Adds Bulk Replacements to Illuminate\\Translation"
            },
            {
                "name": "View",
                "class": "Oxygen\\Core\\View\\ViewServiceProvider",
                "description": "Compiles Views from a String"
            }
        ]
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.18",
        "phpspec/phpspec": "^6.1"
    },
    "scripts": {
        "test": "vendor/bin/phpspec run && vendor/bin/phpstan analyze src --level 1"
    }
}
